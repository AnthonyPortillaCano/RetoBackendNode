{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,         // Habilita la importación de JSON
    "moduleResolution": "node"         // Asegúrate de tener moduleResolution configurado
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
